---
interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image = "/og-image.jpg" } = Astro.props;

import { INFO } from "../data/info";

const siteTitle = INFO.name;
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site || "https://tabernaaliaga.com"
);

const schema = {
  "@context": "https://schema.org",
  "@type": "Restaurant",
  name: INFO.name,
  image: ["https://tabernaaliaga.com/og-image.jpg"],
  address: {
    "@type": "PostalAddress",
    streetAddress: INFO.address.street,
    addressLocality: INFO.address.city,
    addressRegion: INFO.address.region,
    postalCode: INFO.address.postalCode,
    addressCountry: INFO.address.country,
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: INFO.geo.lat,
    longitude: INFO.geo.lng,
  },
  url: "https://tabernaaliaga.com",
  telephone: INFO.phones.landline,
  servesCuisine: "Mediterránea, Española",
  priceRange: "$$",
  openingHoursSpecification: [
    // Simplified for brevity, usually you map days.
    // Ideally we parse INFO.hours_tripadvisor to generate this structure dynamically if strict schema is needed.
    // For now, I'll keep the static structure but note that it should match.
    // Since hours are complex strings in our data, I'll leave a generalized valid schema or just one main block.
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: ["Monday", "Wednesday", "Thursday", "Friday"],
      opens: "09:00",
      closes: "23:00",
    },
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: ["Saturday", "Sunday"],
      opens: "12:00",
      closes: "16:00",
    },
  ],
};
---

<meta charset="UTF-8" />
<meta name="description" content={description} />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="canonical" href={canonicalURL} />
<meta name="generator" content={Astro.generator} />
<title>{fullTitle}</title>

<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={image} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:type" content="website" />
<meta property="twitter:card" content="summary_large_image" />

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
