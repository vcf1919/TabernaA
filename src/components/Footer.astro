---
import { MapPin, Phone, Clock, Instagram } from "lucide-react";
import { INFO } from "../data/info";
---

<footer class="bg-primary text-base py-16">
  <div
    class="max-w-7xl mx-auto px-4 md:px-8 grid grid-cols-1 md:grid-cols-3 gap-12"
  >
    <!-- Contact Info -->
    <div class="space-y-4">
      <h3 class="font-playfair text-2xl font-bold text-accent">{INFO.name}</h3>
      <div class="space-y-4 text-white/80">
        <p class="flex items-start gap-3">
          <MapPin className="w-5 h-5 text-accent mt-1 flex-shrink-0" />
          <span>
            {INFO.address.street}<br />
            {INFO.address.postalCode}
            {INFO.address.city}, {INFO.address.region}
          </span>
        </p>

        <div class="flex items-start gap-3">
          <Phone className="w-5 h-5 text-accent mt-1 flex-shrink-0" />
          <div class="flex flex-col gap-1">
            <a
              href={`https://wa.me/${INFO.phones.whatsapp.replace(/\s+/g, "").replace("+", "")}`}
              class="hover:text-accent transition-colors"
            >
              WhatsApp: {INFO.phones.whatsapp}
            </a>
            <a
              href={`tel:${INFO.phones.landline.replace(/\s+/g, "")}`}
              class="hover:text-accent transition-colors"
            >
              Fijo: {INFO.phones.landline}
            </a>
          </div>
        </div>

        <a
          href={INFO.socials.instagram}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 hover:text-accent transition-colors w-fit"
        >
          <Instagram className="w-5 h-5 text-accent" />
          <span>@tabernaliaga</span>
        </a>
      </div>
    </div>

    <!-- Hours -->
    <div class="space-y-4">
      <h3 class="font-playfair text-xl text-white">Horario</h3>
      <div class="space-y-4 text-white/80">
        <div class="flex items-start gap-3">
          <Clock className="w-5 h-5 text-accent mt-1 flex-shrink-0" />
          <div class="space-y-2 text-sm">
            <p>
              <span class="text-white block font-semibold">Comidas:</span>
              {INFO.hours.lunch}
            </p>
            <p>
              <span class="text-white block font-semibold">Cenas:</span>
              {INFO.hours.dinner}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Map -->
    <div class="h-48 bg-white/10 rounded-lg overflow-hidden relative">
      <iframe
        src={`https://maps.google.com/maps?q=${INFO.geo.lat},${INFO.geo.lng}&hl=es&z=16&output=embed`}
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="absolute inset-0 w-full h-full grayscale hover:grayscale-0 transition-all duration-500 opacity-80 hover:opacity-100"
      ></iframe>
    </div>
  </div>

  <div
    class="max-w-7xl mx-auto px-4 md:px-8 mt-12 pt-8 border-t border-white/10 text-center text-white/40 text-sm"
  >
    &copy; {new Date().getFullYear()}
    {INFO.name}. Todos los derechos reservados.
  </div>
</footer>
