---
import { Quote } from "lucide-react";
import { SITE_DATA } from "../../data/tabernaAliaga";
---

<section class="py-24 bg-base relative">
  <!-- Decorative background pattern -->
  <div
    class="absolute inset-0 opacity-5 pointer-events-none bg-[radial-gradient(#000000_1px,transparent_1px)] [background-size:16px_16px]"
  >
  </div>

  <div class="max-w-7xl mx-auto px-4 md:px-8 relative z-10">
    <div class="text-center mb-16">
      <h2 class="font-playfair text-4xl md:text-5xl mb-4">
        Lo que dicen de nosotros
      </h2>
      <div
        class="inline-flex items-center gap-2 bg-white px-4 py-2 rounded-full shadow-sm"
      >
        <span class="text-yellow-500 text-xl">★★★★★</span>
        <span class="font-bold text-primary">{SITE_DATA.reviews.rating}/5</span>
        <span class="text-gray-500 text-sm"
          >en Tripadvisor ({SITE_DATA.reviews.count} reseñas)</span
        >
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      {
        SITE_DATA.reviews.themes.slice(0, 3).map((theme, index) => (
          <div class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow">
            <Quote className="w-10 h-10 text-accent/20 mb-4" />
            <p class="text-gray-700 font-medium text-lg italic">"{theme}"</p>
            <div class="mt-6 flex items-center gap-3">
              <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center text-xs font-bold text-gray-500">
                CLI
              </div>
              <div>
                <p class="text-sm font-bold text-primary">Cliente Verificado</p>
                <p class="text-xs text-gray-500">Tripadvisor</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Corporate Clients Strip -->
    <div class="border-t border-primary/10 pt-12 pb-4 text-center">
      <p class="text-sm uppercase tracking-widest text-gray-500 mb-8">
        Confían en nuestro Catering
      </p>
      <div
        class="flex flex-wrap justify-center items-center gap-12 opacity-60 grayscale hover:grayscale-0 transition-all duration-500"
      >
        {
          SITE_DATA.services.catering.clients.map((client) => (
            <span class="text-xl md:text-2xl font-playfair font-bold text-primary">
              {client}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</section>
