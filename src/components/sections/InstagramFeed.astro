---
import { Instagram } from "lucide-react";
import { INFO } from "../../data/info";

const INSTAGRAM_POSTS = [
  {
    id: 1,
    img: "https://images.unsplash.com/photo-1544148103-0773bf10d330?auto=format&fit=crop&q=80&w=400",
    caption: "Nuestro equipo en acci√≥n",
  },
  {
    id: 2,
    img: "https://images.unsplash.com/photo-1555939594-58d7cb561ad1?auto=format&fit=crop&q=80&w=400",
    caption: "Rodaballo espectacular",
  },
  {
    id: 3,
    img: "https://images.unsplash.com/photo-1559847844-5315695dadae?auto=format&fit=crop&q=80&w=400",
    caption: "Detalles que importan",
  },
  {
    id: 4,
    img: "https://images.unsplash.com/photo-1512058564366-18510be2db19?auto=format&fit=crop&q=80&w=400",
    caption: "Arroces del domingo",
  },
];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="flex flex-col items-center mb-12">
      <Instagram className="w-8 h-8 text-accent mb-4" />
      <h2
        class="font-playfair text-3xl md:text-4xl text-primary text-center mb-2"
      >
        La Taberna en Vivo
      </h2>
      <a
        href={INFO.socials.instagram}
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-500 hover:text-accent transition-colors text-sm font-semibold tracking-wide"
      >
        @tabernaliaga
      </a>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {
        INSTAGRAM_POSTS.map((post) => (
          <a
            href={INFO.socials.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="aspect-square relative group overflow-hidden rounded-lg cursor-pointer"
          >
            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors z-10" />
            <img
              src={post.img}
              alt={post.caption}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
          </a>
        ))
      }
    </div>
  </div>
</section>
