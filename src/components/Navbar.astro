---
import Button from "./ui/Button.astro";
import { SITE_DATA } from "../data/tabernaAliaga";
---

<header
  class="sticky top-0 z-50 w-full bg-base/95 backdrop-blur-sm border-b border-primary/10"
>
  <div
    class="max-w-7xl mx-auto px-4 md:px-8 h-20 flex items-center justify-between"
  >
    <a
      href="/"
      class="text-2xl font-playfair font-bold text-primary tracking-tighter"
    >
      {SITE_DATA.name}
    </a>

    <nav class="hidden md:flex items-center gap-8">
      <a href="/carta" class="text-primary hover:text-accent transition-colors"
        >Carta</a
      >
      <a
        href="/esmorzaret"
        class="text-primary hover:text-accent transition-colors">Esmorzaret</a
      >
      <a
        href="/delivery"
        class="text-primary hover:text-accent transition-colors">Delivery</a
      >
      <a
        href="/catering"
        class="text-primary hover:text-accent transition-colors">Catering</a
      >

      <Button
        href={`https://wa.me/${SITE_DATA.contact.phoneMobile.replace(/\s+/g, "").replace("+", "")}?text=Hola!%20Me%20gustar%C3%ADa%20reservar%20una%20mesa%20en%20Taberna%20Aliaga`}
        target="_blank"
        rel="noopener noreferrer"
        variant="accent"
        size="sm"
      >
        Reservar
      </Button>
    </nav>
  </div>
</header>
