---
const { 
  href, 
  variant = 'primary', 
  size = 'md', 
  class: className,
  ...rest 
} = Astro.props;

const variants = {
  primary: "bg-primary text-white hover:bg-black",
  accent: "bg-accent text-white hover:brightness-110",
  outline: "border border-primary text-primary hover:bg-primary/5",
  ghost: "text-primary hover:bg-primary/5"
};

const sizes = {
  sm: "px-4 py-2 text-sm",
  md: "px-6 py-3 text-base",
  lg: "px-8 py-4 text-lg"
};

const Tag = href ? 'a' : 'button';
---

<Tag 
  href={href} 
  class:list={[
    "inline-flex items-center justify-center font-medium transition-colors duration-200 rounded-none", // Rounded-none for more elegant/sharp look or based on preference, assuming clean
    variants[variant],
    sizes[size],
    className
  ]}
  {...rest}
>
  <slot />
</Tag>
