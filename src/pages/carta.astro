---
import MainLayout from "../layouts/MainLayout.astro";
import { INFO } from "../data/info";
---

<MainLayout title={`Carta | ${INFO.name}`}>
  <div class="bg-primary text-base py-32 pb-16 px-4 text-center">
    <span class="text-accent uppercase tracking-widest text-sm font-semibold"
      >Gastronomía</span
    >
    <h1 class="font-playfair text-5xl md:text-6xl text-white mt-4">
      Nuestra Carta
    </h1>
    <p class="mt-4 text-white/80 italic max-w-xl mx-auto">
      "Del mercado a la mesa. Producto fresco, tratado con respeto y cariño."
    </p>
  </div>

  <div class="bg-white py-16">
    <div class="container mx-auto px-4 max-w-5xl">
      <!-- Lonja -->
      <section class="mb-16">
        <div class="flex items-baseline gap-4 mb-8">
          <h2
            class="text-3xl md:text-4xl font-playfair text-primary border-b-2 border-accent pb-2 inline-block"
          >
            {INFO.menuCategories.lonja.title}
          </h2>
        </div>
        <div class="grid md:grid-cols-2 gap-x-12 gap-y-8">
          {
            INFO.menuCategories.lonja.items.map((item) => (
              <div class="flex justify-between items-start group">
                <div>
                  <h3 class="font-bold text-lg text-primary group-hover:text-accent transition-colors">
                    {item.name}
                  </h3>
                  <p class="text-gray-600 text-sm italic">{item.description}</p>
                </div>
                <span class="border-b border-dotted border-gray-300 flex-grow mx-4 relative top-[-6px]" />
              </div>
            ))
          }
        </div>
      </section>

      <!-- Pescados (Signature) -->
      <section class="mb-16 bg-base p-8 rounded-xl border border-stone-200">
        <div class="text-center mb-10">
          <span class="text-accent text-xs uppercase tracking-widest font-bold"
            >Especialidad de la Casa</span
          >
          <h2 class="text-3xl md:text-4xl font-playfair text-primary mt-2">
            {INFO.menuCategories.pescados.title}
          </h2>
        </div>
        <div class="grid md:grid-cols-1 gap-8 max-w-3xl mx-auto">
          {
            INFO.menuCategories.pescados.items.map((item) => (
              <div class="text-center group">
                <h3 class="font-bold text-2xl text-primary font-playfair mb-2">
                  {item.name}
                </h3>
                <p class="text-gray-600 italic">{item.description}</p>
                <div class="w-12 h-0.5 bg-accent mx-auto mt-4 opacity-50 group-hover:w-24 transition-all" />
              </div>
            ))
          }
        </div>
      </section>

      <!-- Arroces -->
      <section class="mb-16">
        <div
          class="flex flex-col md:flex-row items-center md:items-baseline gap-4 mb-8 justify-between"
        >
          <h2
            class="text-3xl md:text-4xl font-playfair text-primary border-b-2 border-accent pb-2 inline-block"
          >
            {INFO.menuCategories.arroces.title}
          </h2>
          <span
            class="bg-primary text-white text-xs px-3 py-1 rounded-full uppercase tracking-wider"
          >
            {INFO.menuCategories.arroces.note}
          </span>
        </div>
        <div class="grid md:grid-cols-2 gap-x-12 gap-y-8">
          {
            INFO.menuCategories.arroces.items.map((item) => (
              <div class="flex justify-between items-start group">
                <div>
                  <h3 class="font-bold text-lg text-primary group-hover:text-accent transition-colors">
                    {item.name}
                  </h3>
                  <p class="text-gray-600 text-sm italic">{item.description}</p>
                </div>
              </div>
            ))
          }
        </div>
      </section>

      <div class="grid md:grid-cols-2 gap-16">
        <!-- Tapas -->
        <section>
          <h2
            class="text-3xl font-playfair text-primary border-b-2 border-accent pb-2 inline-block mb-8"
          >
            {INFO.menuCategories.tapas.title}
          </h2>
          <div class="space-y-6">
            {
              INFO.menuCategories.tapas.items.map((item) => (
                <div class="group/item relative">
                  <h3 class="font-bold text-lg text-primary flex items-center gap-2 cursor-pointer w-fit">
                    {item.name}
                    {item.name.includes("Alcachofas") && (
                      <span class="hidden md:inline-block md:opacity-0 md:group-hover/item:opacity-100 transition-opacity bg-accent text-primary text-[10px] px-2 py-0.5 rounded-full uppercase tracking-wider absolute left-full ml-2 whitespace-nowrap shadow-lg">
                        Receta Secreta 1995
                      </span>
                    )}
                  </h3>
                  {/* Mobile Tooltip Indicator */}
                  {item.name.includes("Alcachofas") && (
                    <div class="md:hidden text-accent text-xs italic mt-1">
                      Receta Secreta 1995
                    </div>
                  )}
                  <p class="text-gray-600 text-sm italic">{item.description}</p>
                </div>
              ))
            }
          </div>
        </section>

        <!-- Carnes & Bodega -->
        <div class="space-y-12">
          <section>
            <h2
              class="text-3xl font-playfair text-primary border-b-2 border-accent pb-2 inline-block mb-8"
            >
              {INFO.menuCategories.carnes.title}
            </h2>
            <div class="space-y-6">
              {
                INFO.menuCategories.carnes.items.map((item) => (
                  <div>
                    <h3 class="font-bold text-lg text-primary">{item.name}</h3>
                    <p class="text-gray-600 text-sm italic">
                      {item.description}
                    </p>
                  </div>
                ))
              }
            </div>
          </section>

          <section>
            <h2
              class="text-3xl font-playfair text-primary border-b-2 border-accent pb-2 inline-block mb-8"
            >
              {INFO.menuCategories.bodega.title}
            </h2>
            <div class="space-y-6">
              {
                INFO.menuCategories.bodega.items.map((item) => (
                  <div>
                    <h3 class="font-bold text-lg text-primary">{item.name}</h3>
                    <p class="text-gray-600 text-sm italic">
                      {item.description}
                    </p>
                  </div>
                ))
              }
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
